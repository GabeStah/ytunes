<p id="notice"><%= notice %></p>

<h1>Listing Songs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Artist</th>
      <th>Word</th>
      <th>Lyrics</th>
      <th>Used</th>
      <th>Winner</th>
      <th>Youtube</th>
      <th>Youtube start time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @songs.each do |song| %>
      <tr>
        <td><%= song.title %></td>
        <td><%= song.artist %></td>
        <td><%= song.word %></td>
        <td><%= song.lyrics %></td>
        <td><%= song.used %></td>
        <td><%= song.winner %></td>
        <td><%= song.youtube_id %></td>
        <td><%= song.youtube_start_time %></td>
        <td><%= link_to 'Show', song %></td>
        <td><%= link_to 'Edit', edit_song_path(song) %></td>
        <td><%= link_to 'Destroy', song, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

